{
    "env": {
        "commonjs": true,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:mocha/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "plugins": [
        "mocha"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ]
    }
}